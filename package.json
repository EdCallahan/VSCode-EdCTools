{
  "name": "edctools",
  "publisher": "EdC",
  "displayName": "EdC Personal Tools",
  "description": "Productivity tools for my personal use",
  "icon": "images/icon.png",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/EdCallahan/VSCode-EdCTools.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:edctools.setPowerShellLanguage",
    "onCommand:edctools.setSQLLanguage",
    "onCommand:edctools.openPanes",
    "onCommand:edctools.closePanes",
    "onCommand:edctools.moveTabFirst",
    "onCommand:edctools.moveTabLast"
  ],
  "contributes": {
    "commands": [
      {
        "command": "edctools.setSQLLanguage",
        "title": "edctools: Set Language Mode to SQL"
      },
      {
        "command": "edctools.setPowerShellLanguage",
        "title": "edctools: Set Language Mode to PowerShell"
      },
      {
        "command": "edctools.openPanes",
        "title": "edctools: Open Panes"
      },
      {
        "command": "edctools.closePanes",
        "title": "edctools: Close Panes"
      },
      {
        "command": "edctools.moveTabFirst",
        "title": "edctools: Move Tab to First"
      },
      {
        "command": "edctools.moveTabLast",
        "title": "edctools: Move Tab to Last"
      }
    ],
    "keybindings": [
      {
        "command": "edctools.setSQLLanguage",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "edctools.setPowerShellLanguage",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "edctools.openPanes",
        "key": "ctrl+b",
        "when": "!sideBarVisible && !panelVisible"
      },
      {
        "command": "edctools.closePanes",
        "key": "ctrl+b",
        "when": "sideBarVisible || panelVisible"
      },
      {
        "command": "edctools.moveTabFirst",
        "key": "alt+left"
      },
      {
        "command": "edctools.moveTabLast",
        "key": "alt+right"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0"
  }
}
