{
  "name": "edctools",
  "publisher": "EdC",
  "displayName": "EdCTools",
  "description": "Misc tools for Me",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:edctools.setPowerShellLanguage",
    "onCommand:edctools.setSQLLanguage",
    "onCommand:edctools.openPanes",
    "onCommand:edctools.closePanes"
  ],
  "contributes": {
    "commands": [
      {
        "command": "edctools.setSQLLanguage",
        "title": "Set Language Mode to SQL"
      },
      {
        "command": "edctools.setPowerShellLanguage",
        "title": "Set Language Mode to PowerShell"
      },
      {
        "command": "edctools.openPanes",
        "title": "Open Panes"
      },
      {
        "command": "edctools.closePanes",
        "title": "Close Panes"
      }
    ],
    "keybindings": [
      {
        "command": "edctools.setSQLLanguage",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "edctools.setPowerShellLanguage",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "edctools.openPanes",
        "key": "ctrl+b",
        "when": "!sideBarVisible && !panelVisible && !auxiliaryBarVisible"
      },
      {
        "command": "edctools.closePanes",
        "key": "ctrl+b",
        "when": "sideBarVisible || panelVisible || auxiliaryBarVisible"
      }

    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}